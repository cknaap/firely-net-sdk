<Project Sdk="Microsoft.NET.Sdk">

	<Import Project="..\firely-net-sdk-tests.props" />

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<AssemblyName>Benchmarks</AssemblyName>
		<AssemblyName>Firely.Sdk.Benchmarks</AssemblyName>
		<RootNamespace>Firely.Sdk.Benchmarks</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="TestData\fp-test-patient.json" />
		<None Remove="TestData\fp-test-patient.xml" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="TestData\fp-test-patient.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="TestData\fp-test-patient.xml">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="BenchmarkDotNet" Version="0.13.2" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\common\src\Hl7.Fhir.ElementModel\Hl7.Fhir.ElementModel.csproj" />
		<ProjectReference Include="..\Hl7.Fhir.Core\Hl7.Fhir.Core.csproj" />
		<ProjectReference Include="..\Hl7.Fhir.Specification\Hl7.Fhir.Specification.csproj" />
	</ItemGroup>

</Project>
